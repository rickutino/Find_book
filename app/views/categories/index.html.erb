<h1>カテゴリー一覧</h1>
 <%= link_to "", new_category_path, class: "fa fa-plus-circle fa-2x", aria: { hidden: "true" } %>
<table>
  <% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to '編集', edit_category_path(category), method: 'get'%></td>
    <td><%= link_to '削除', category_path(category), method: :delete, data: { confirm: '削除してもよろしいですか?' } %></td>
  <% end %>
</table>
<%= link_to "ホームページへ", new_search_path %>
