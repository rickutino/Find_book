<h1>新しい本の登録</h1>
<%= form_with model: @book do |f| %>
  <%= f.text_field :title, placeholder: "タイトルを入力してください。" %>
  <%= f.collection_select(:category_id, @categories, :id, :name, {prompt: "カテゴリーを選択してください"}) %>
  <%= f.text_area :description,size: "20x10", placeholder: "タイトルを入力してください。" %>

  <%= f.submit "登録" %>
<% end %>

<%= link_to "戻る", :back %>